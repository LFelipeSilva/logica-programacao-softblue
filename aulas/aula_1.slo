início {
    caractere: nome;
    inteiro: idade;
    real: altura;
    
    //nome = "João";
    leia("Digite seu nome", nome);
    
    //idade = 30;
    leia("Digite sua idade", idade);
   
    //altura = 1.74;
    leia("Digite sua altura", altura);
    
    caractere:info;
    
    info = nome +", " + idade + ", " +altura;
    
    escreva(info);   
       
}